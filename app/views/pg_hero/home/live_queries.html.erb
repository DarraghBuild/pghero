<div class="content">
  <h1>Live Queries</h1>

  <p><%= pluralize(@running_queries.size, "query") %></p>

  <%= render partial: "live_queries_table", locals: {queries: @running_queries, create_index_progress: @create_index_progress, vacuum_progress: @vacuum_progress, blocked_queries: @blocked_queries, held_locks: @held_locks} %>

  <p><%= button_to "Kill all connections", kill_all_path, class: "btn btn-danger" %></p>

  <p class="text-muted">You may need to restart your app servers afterwards.</p>
</div>
